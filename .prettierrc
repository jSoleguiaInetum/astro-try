{
	"bracketSameLine": true,
	"bracketSpacing": true,
	"embeddedLanguageFormatting": "auto",
	"endOfLine": "crlf",
	"tabWidth": 4,
	"semi": true,
	"singleQuote": true,
	"printWidth": 100,
	"singleAttributePerLine": false,
	"trailingComma": "all",
	"useTabs": true,
	"vueIndentScriptAndStyle": true,
	"requireConfig": true,
	"useEditorConfig": false,
	"overrides": [
		{
			"files": ["*.mjs", "*.cjs", "*.js"],
			"options": {
				"parser": "babel"
			}
		},

		{
			"files": ["*.mts", "*.cts", "*.ts"],
			"options": {
				"parser": "babel-ts"
			}
		},

		{
			"files": ["*.json", "*.jsonc", "*.json5"],
			"options": {
				"parser": "json5",
				"singleQuote": false,
				"quoteProps": "preserve",
				"trailingComma": "none"
			}
		}
	]
}
