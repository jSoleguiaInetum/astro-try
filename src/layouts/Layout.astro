---
const imgAstroA = '/images/astro-a.svg';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Prueba de Astro con API Open Library" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
        <link rel="stylesheet" href="/styles.css">
	</head>
	<body>
        <main>
        <img src={imgAstroA} alt="Astro logo" class="astro-a" />
		<slot />
        </main>
	</body>
</html>

